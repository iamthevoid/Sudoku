<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="iam.thevoid.sudoku.db.model.Cell" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:background="@{item.isOddBlock() ? @color/mainBackground : @color/darkBackground}">


        <TextView
            style="@style/CellText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:intText="@{item.insertedNumber}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="W,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:type="@{View.INVISIBLE}"
            app:visibile="@{item.insertedNumber != 0}"
            tools:text="0" />


    </android.support.constraint.ConstraintLayout>
</layout>