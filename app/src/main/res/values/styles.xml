<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/main_background</item>
    </style>

    <style name="CellText">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="NumberButton">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/actionBarItemBackground</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">28dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <style name="ImageButton" parent="NumberButton">
        <item name="android:padding">8dp</item>
    </style>
    <style name="CellHintText">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">10dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="BoardStyle">
        <item name="android:padding">0dp</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:background">@color/board_background</item>
    </style>
    <style name="BoardBackground">
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@color/cellDividers</item>
    </style>

    <style name="MenuItem">
        <item name="android:padding">4dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/appBlack</item>
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
