    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:background="@color/cellDividers"-->
    <!--&gt;-->


    <iam.thevoid.sudoku.widget.SquareFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@{item.isOddBlock() ? @color/odd_cell : @color/even_cell}">

        <TextView
            style="@style/CellText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:intText="@{item.insertedNumber}"
            app:type="@{View.INVISIBLE}"
            app:visibile="@{item.insertedNumber != 0}"
            tools:text="0" />
    </iam.thevoid.sudoku.widget.SquareFrameLayout>

    <!--</iam.thevoid.sudoku.widget.SquareConstraintLayout>-->
